package ex2;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;

import org.apache.poi.xssf.usermodel.XSSFCell;
import org.apache.poi.xssf.usermodel.XSSFRow;
import org.apache.poi.xssf.usermodel.XSSFSheet;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;



public class Main {

	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		XSSFWorkbook workbook = new XSSFWorkbook(); // 새 엑셀 생성
		XSSFSheet sheet = workbook.createSheet("test_sheet1");	// 새 시트 생성
		XSSFRow row = sheet.createRow(0);	// 엑셀의 행은 0번부터 시작
		XSSFCell cell = row.createCell(0);	// 행의 셀은 0번부터 시작
		cell.setCellValue("테스트 데이터");	// 생성한 셀에 데이터 삽입
		try {
			FileOutputStream fos = new FileOutputStream("./res/test2.xlsx");
			workbook.write(fos);
			fos.close();
			System.out.println("엑셀파일 생성 성공");
		}catch(IOException e)
		{
			e.printStackTrace();
			System.out.println("엑셀파일생성실패");
		}
	}

}
